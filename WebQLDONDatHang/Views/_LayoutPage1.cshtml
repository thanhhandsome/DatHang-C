<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-secondary text-xl-center text-white">
                DASHBOARD
            </div>
            <div class="card-title bg-info">
                <div class="row">
                    <div class="col-md-8">
                        <ul class="nav list-group-horizontal">
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Quản lý Hàng hóa", "FormHanghoa", "Home", null, new { @Class = "text-white" })
                            </li>
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Menu2A", "menu2", null, new { @Class = "text-white" })
                            </li>
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Menu3A", "menu3", null, new { @Class = "text-white" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <ul class="nav list-group-horizontal float-right">
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Menu1B", "menu1", null, new { @Class = "text-white" })
                            </li>
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Gio Hang", "GioHang","Home",null, new { @Class = "text-white" })
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <ul class="nav list-group">
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Lập đơn đạt hàng", "Index","Home", null, new { @Class = "text-white" })
                            </li>
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Danh mục đơn đặt hàng", "Index","DonDatHang", null, new { @Class = "text-white" })
                            </li>
                            <li class="nav-item list-group-item bg-primary ">
                                @Html.ActionLink("Chi Tiết đơn đặt hàng", "Index","DonDatHang", null, new { @Class = "text-white" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-10">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
               
            </div>
        </div>
    </div>
</body>
</html>
