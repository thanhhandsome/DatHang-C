@model WebQLDONDatHang.Models.hoadon

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Thong tin gio hang</h2>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@using (Html.BeginForm("LapDonDatHang","Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                Mã hàng
            </th>
            <th>
                Đơn hàng
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model.chitiethoadons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.mahang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hanghoa.tenhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hanghoa.dvt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dongia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    @{double thanhtien = item.soluong.Value * item.dongia.Value;}
                    @Html.DisplayFor(modelItem => thanhtien)
                </td>
                <td>
                    @Html.ActionLink("Xoa", "XoaHangHoa", "Home", new { id = item.mahang }, new { @class = "btn btn-primary" })
                </td>

            </tr>
        }

    </table>
    <div class="form-horizontal">
        <h4>hoadon</h4>
        <hr />
        <div class="row">
            <div class="offset-md-6 col-md-2">
                Tổng thành tiền
            </div>
            <div class="col-md-2">
                @{double tongtien = Model.chitiethoadons.Sum(x => x.dongia.Value * x.soluong.Value); }
                @tongtien
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.sohd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sohd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sohd, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ngaylaphd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ngaylaphd, new { htmlAttributes = new { @class = "form-control" ,@type="date"} })
                @Html.ValidationMessageFor(model => model.ngaylaphd, "", new { @class = "text-danger", })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tenkh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenkh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenkh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lap don dat hang" class="btn btn-default" />
            </div>
        </div>
    </div>
}

